<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--play ground-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--玩家A-->
        <RelativeLayout
            android:id="@+id/myField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/play_ground_back"
            android:orientation="vertical">

            <!--下落中的单词-->
            <TextView
                android:id="@+id/myWordSpell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="哈哈嘻嘻"
                android:textColor="@color/currentWord"
                android:textSize="16sp" />

            <!--底部死亡单词区-->
            <LinearLayout
                android:id="@+id/myDeadWordsArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/myJacksArea"
                android:orientation="vertical"></LinearLayout>

            <!--底部千斤顶-->
            <TextView
                android:id="@+id/myJacksArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:height="0dp"
                android:background="#f00"></TextView>
        </RelativeLayout>

        <!--玩家B-->
        <RelativeLayout
            android:id="@+id/hisField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="3"
            android:background="@drawable/play_ground_back"
            android:orientation="vertical">
            <!--下落中的单词-->
            <TextView
                android:id="@+id/hisWordSpell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="哈哈"
                android:textColor="@color/currentWord"
                android:textSize="16sp" />

            <!--底部死亡单词区-->
            <LinearLayout
                android:id="@+id/hisDeadWordsArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hisJacksArea"
                android:orientation="vertical"></LinearLayout>

            <!--底部千斤顶-->
            <TextView
                android:id="@+id/hisJacksArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:height="0dp"
                android:background="#f00"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <!--道具区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/inc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#00000000"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/plus_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="8dp"
                android:text="0"
                android:textColor="#ddd"
                android:textSize="10sp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#00000000"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/minus_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="8dp"
                android:text="0"
                android:textColor="#ddd"
                android:textSize="10sp" />
        </FrameLayout>
    </LinearLayout>

    <!--控制按钮区-->
    <LinearLayout
        android:id="@+id/controlBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="开始比赛"
            android:textColor="@color/defaultTextColor" />

        <Button
            android:id="@+id/btnInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="邀请对手"
            android:textColor="@color/defaultTextColor" />

        <Button
            android:id="@+id/btnChangeRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="换房间"
            android:textColor="@color/defaultTextColor" />

        <Button
            android:id="@+id/btnExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="单人练习"
            android:textColor="@color/defaultTextColor" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="离开"
            android:textColor="@color/defaultTextColor" />
    </LinearLayout>

    <!--备选答案按钮区-->
    <LinearLayout
        android:id="@+id/answerBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="answer1"
            android:textAllCaps="false"
            android:textColor="@color/defaultTextColor" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="answer2"
            android:textAllCaps="false"
            android:textColor="@color/defaultTextColor" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@color/buttonBackground"
            android:text="answer3"
            android:textAllCaps="false"
            android:textColor="@color/defaultTextColor" />
    </LinearLayout>

</LinearLayout>
